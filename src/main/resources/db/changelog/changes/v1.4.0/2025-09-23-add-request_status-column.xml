<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="addRequestStatusColumnToBatchRequestSplitTable" author="Mukhiddin_Yusupov">
      <preConditions onFail="MARK_RAN">
        <tableExists tableName="batch_request_split"/>
      </preConditions>

      <comment>Add request_status column to batch_request_split table</comment>

      <addColumn tableName="batch_request_split">
        <column name="request_status" type="text"/>
      </addColumn>
    </changeSet>

</databaseChangeLog>
